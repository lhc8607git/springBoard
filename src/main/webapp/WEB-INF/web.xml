<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">


	<!-- The definition of the Root Spring Container shared by all Servlets and Filters -->
	<!-- 설정 파일 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<!--  스프링의 환경설정 파일  root-context.xml을 가장 먼저 참조 -->
		<param-value>/WEB-INF/spring/root-context.xml
    /WEB-INF/spring/security-context.xml
		</param-value>
	</context-param>



	<!-- Creates the Spring Container shared by all Servlets and Filters -->
	<!-- ContextLoaderListener : 이 프로젝트가 서블릿이 실행이 될 때,  -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>




	<!-- 첨부파일 설정 셋팅 -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>    <!-- 스프링에 내장된 서블릿 클래스-->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<!-- /WEB-INF/spring/appServlet/servlet-context.xml을 참조하는데,  xml 파일 안에 정의된 객체들을 로딩한다.-->
			<param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>                                                                      <!-- 가장 첫번째 우선순위 -->
		<multipart-config>
			<location>C:\\upload\\temp</location>
			<max-file-size>20971520</max-file-size>                <!--1MB * 20 -->
			<max-request-size>41943040</max-request-size>    <!-- 40MB -->
			<file-size-threshold>20971520</file-size-threshold> <!-- 20MB -->
		</multipart-config>
	</servlet>

	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
		<!-- DispatcherServlet이 모든 요청을 가로챌 수 있도록 등록 -->
		<!-- 특정 url으로 변경하여 사용가능 ex) *.do -->
	</servlet-mapping>




	<!-- "스프링 시큐리티"가 스프링MVC 사용하기위해서, 필터 이용해서, 스프링 동작에 관여하도록 셋팅-->
	<!-- 먼저 인코딩 처리 부터 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
		<param-name>encoding</param-name>
		<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  



	<!-- 그 후에, 시큐리티 적용 -->
  	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


  
</web-app>